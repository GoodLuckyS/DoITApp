<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="titleTextView">


    </style>

    <style name="Daily.TextInput.OutlinedBox" parent="Widget.Material3.TextInputEditText.OutlinedBox">

        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="expandedHintEnabled">false</item>



    </style>

    <style name="Daily.TextInput.OutlinedBox.DropDownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="expandedHintEnabled">false</item>
    </style>

    <style name="Daily.TextView.SettingsTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="Daily.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:button">@color/colorOnDark</item>
    </style>


