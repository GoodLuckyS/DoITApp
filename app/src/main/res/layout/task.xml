<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="16dp"

    >

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:id="@+id/soap"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/purple_200"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="@id/tvExpire"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTask">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/baseline_search_24" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tvTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Написать крутой код"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@id/soap"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvExpire"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="@id/tvTask"
        app:layout_constraintEnd_toEndOf="@id/tvTask"
        app:layout_constraintTop_toBottomOf="@id/tvTask"
        android:text="Expire at: 28.10.23"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/baseline_fire_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>

